{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block main%}
    <h1>Tag index</h1>

    <table class="table" >
        <thead>
            <tr class="table-secondary">
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.title }}</td>
                <td>{{ tag.description }}</td>
                <td>
                    <a href="{{ path('tag_show', {'id': tag.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('tag_edit', {'id': tag.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tag_new') }}" class="btn btn-secondary">+</a>
{% endblock %}
