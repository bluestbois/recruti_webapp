{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block main %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ job.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ job.date ? job.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('job_index') }}"<button type="button" class="btn btn-primary mt-2 mb-2">Back to list</button></a>

    <a href="{{ path('job_edit', {'id': job.id}) }}"<button type="button" class="btn btn-primary mt-2 mb-2">edit</button></a>

    {{ include('job/_delete_form.html.twig') }}
{% endblock %}
