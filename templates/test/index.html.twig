{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block page_title %} Tests {% endblock %}

{% block main %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>{{ test.title }}</td>
                <td>{{ test.description }}</td>
                <td>
                    <a href="{{ path('test_show', {'id': test.id}) }}">show</a>
                    <a href="{{ path('test_edit', {'id': test.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="width: 100%; display:flex; justify-content: flex-end">
        <a class="btn btn-primary" href="{{ path('test_new') }}">Create new</a>
    </div>
{% endblock %}
