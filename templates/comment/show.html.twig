{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block main %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ comment.date ? comment.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ comment.likes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}"class="btn btn-secondary"> < Back </a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}" class="btn btn-danger">edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
