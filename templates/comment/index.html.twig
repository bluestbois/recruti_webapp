{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block main %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th>Id</th>
                <th>Content</th>
                <th>Date</th>
                <th>Likes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.date ? comment.date|date('Y-m-d') : '' }}</td>
                <td>{{ comment.likes }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new') }}" class="btn btn-secondary">+</a>
{% endblock %}
