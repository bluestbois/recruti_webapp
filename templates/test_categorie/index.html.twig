{% extends 'base.html.twig' %}

{% block title %}TestCategorie index{% endblock %}


{% block page_title %}
    Test categories
{% endblock %}
{% block main %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for test_categorie in test_categories %}
            <tr>
                <td>{{ test_categorie.id }}</td>
                <td>{{ test_categorie.name }}</td>
                <td style="display: flex">
                    <a href="{{ path('test_categorie_show', {'id': test_categorie.id}) }}"><button type="button" class="btn btn-sm shadow-sm btn-info mt-2 mb-2 ml-2"><i class="fas fa-search"></i></button></a>
                    <a href="{{ path('test_categorie_edit', {'id': test_categorie.id}) }}"><button type="button" class="btn btn-sm shadow-sm mt-2 mb-2 ml-2"><i class="far fa-edit"></i></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div style="width: 100%; display:flex; justify-content: flex-end">
        <a href="{{ path('test_categorie_new') }}"><button type="button" class="btn btn-primary btn-sm shadow-sm mt-2 mb-2"><i class="far fa-plus-square"></i> Create New</button></a>
    </div>
{% endblock %}
