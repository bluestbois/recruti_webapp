{% extends 'base.html.twig' %}

{% block title %}Recruiter{% endblock %}

{% block main %}
    <h1>Recruiter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recruiter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recruiter.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ recruiter.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ recruiter.password }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ recruiter.address }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recruiter.description }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ recruiter.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ recruiter.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recruiter_index') }}"><button type="button" class="btn btn-primary mt-2 mb-2">back to list</button></a>

    <a href="{{ path('recruiter_edit', {'id': recruiter.id}) }}"><button type="button" class="btn btn-primary mt-2 mb-2">edit</button></a>

    {{ include('recruiter/_delete_form.html.twig') }}
{% endblock %}
