{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block main %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ post.views }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ post.likes }}</td>
            </tr>
            <tr>
                <th>NOC</th>
                <td>{{ post.NOC }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}"class="btn btn-secondary"> < Back </a>

    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-danger">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
