{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% set answers = ["A", "B", "C"] %}

{% block main %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Statement</th>
                <td>{{ question.statement }}</td>
            </tr>
            <tr>
                <th>Answer A</th>
                <td>{{ question.answerA }}</td>
            </tr>
            <tr>
                <th>Answer B</th>
                <td>{{ question.answerB }}</td>
            </tr>
            <tr>
                <th>Answer C</th>
                <td>{{ question.answerC }}</td>
            </tr>
            <tr>
                <th>Right Answer</th>
                <td>{{ answers[question.rightAnswer] }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ question.points }}</td>
            </tr>
            <tr>
                <th>Test</th>
                <td><a href="{{ path("test_show", {'id': question.test.id}) }}">{{ question.test.title }}</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
