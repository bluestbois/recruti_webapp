{% extends 'base.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block main%}
    <h1>Forum index</h1>

    <table class="table" >
        <thead>
            <tr class="table-secondary">
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forum in forums %}
            <tr>
                <td>{{ forum.id }}</td>
                <td>{{ forum.title }}</td>
                <td>{{ forum.description }}</td>
                <td>
                    <a href="{{ path('forum_show', {'id': forum.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('forum_edit', {'id': forum.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('forum_new') }}" class="btn btn-secondary">+</a>
{% endblock %}
