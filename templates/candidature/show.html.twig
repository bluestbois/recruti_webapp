{% extends 'base.html.twig' %}

{% block title %}Candidature{% endblock %}

{% block gobackbtn %}
    <a href="{{ path("candidature_index") }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Go back
    </a>
{% endblock %}
{% block page_title %}
    Candidature
{% endblock %}
{% block main %}


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidature.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ candidature.date ? candidature.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ candidature.score }}</td>
            </tr>
        </tbody>
    </table>

    <div style="width: 100%; display:flex; justify-content: flex-end">
        <a href="{{ path('candidature_edit', {'id': candidature.id}) }}"><button type="button" class="btn-sm shadow-sm btn btn-primary mt-2 mb-2 mr-2"><i class="far fa-edit"></i> Edit</button></a>
        {{ include('ccandidature/_delete_form.html.twig') }}
    </div>


{% endblock %}
