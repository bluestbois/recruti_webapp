{% extends 'base.html.twig' %}

{% block title %}EventType index{% endblock %}

{% block page_title %} Event types {% endblock %}

{% block main %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event_type in event_types %}
            <tr>
                <td>{{ event_type.id }}</td>
                <td>{{ event_type.name }}</td>
                <td>
                    <a href="{{ path('event_type_show', {'id': event_type.id}) }}">show</a>
                    <a href="{{ path('event_type_edit', {'id': event_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('event_type_new') }}">Create new</a>
{% endblock %}
