{% extends 'base.html.twig' %}

{% block title %}Hello CalanderController!{% endblock %}
{% block custom_stylesheets %}
    <style>
        #calandrier{
            width: 80%;
            margin: auto;
        }
    </style>

{% endblock %}



{% block body %}
    {{ dump(data) }}
<div> id ="calendrier"</div>
{% endblock %}

{% block custom_js %}

    <script>
        window.onload = () =>{
            let calendarElt =document.querySelector("#calendrier")

            let calendar = new FullCalendar.Calendar(calendarElt,{
                initialView: 'dayGridMonth',
                events{{ data| raw }}

            })
            calendar.render()
        }
    </script>
{% endblock %}

