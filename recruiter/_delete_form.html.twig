<form method="post" action="{{ path('recruiter_delete', {'id': recruiter.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recruiter.id) }}">
    <button class="btn btn-danger mt-2 mb-2">Delete</button>
</form>
